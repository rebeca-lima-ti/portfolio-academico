<%- include('partials/header', { nome: estudante.nome }) %>
<section>
  <h2>Meus Projetos</h2>
  <ul class="project-list">
  <% projetos.forEach((p, i) => { %>
    <li class="project-card">
      <h3><%= p.titulo %></h3>
      <p><%= p.descricao %></p>
      <p><strong>Tecnologias:</strong> <%= p.techs.join(", ") %></p>

      <div style="display: flex; gap: 10px; align-items: center; margin-top: auto;">
        <% if (p.link) { %>
          <a href="<%= p.link %>" target="_blank" class="btn-link">Ver Projeto</a>
        <% } %>

        <div class="actions">
          <a href="/projetos/editar/<%= i %>" class="btn-editar">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
              <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
              <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
            </svg>
          </a>
          <form method="POST" action="/projetos/<%= i %>?_method=DELETE">
            <input type="hidden" name="titulo" value="<%= p.titulo %>">
            <button type="submit" class="excluir">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5m3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0z"/>
                <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4zM2.5 3h11V2h-11z"/>
              </svg>
            </button>
          </form>
        </div>
      </div>
    </li>
  <% }) %>
</ul>

  <div class="add-form">
    <h3>Adicionar Projeto</h3>
    <form method="POST" action="/projetos">
      <input type="text" name="titulo" placeholder="Título do projeto" required>
      <textarea type="text" name="descricao" placeholder="Descrição" required></textarea>
      <input type="text" name="link" placeholder="Link do projeto (opcional)">
      <p><strong>Tecnologias:</strong></p>
      <div style="display:flex; flex-wrap:wrap; gap:10px;">
        <% Object.values(Tecnologias).forEach(t => { %>
          <label style="background:#222; padding:5px 10px; border-radius:6px;">
            <input type="checkbox" name="techs" value="<%= t %>"> <%= t %>
          </label>
        <% }) %>
      </div>
      <button type="submit">Adicionar</button>
    </form>
  </div>
</section>
<%- include('partials/footer', { nome: estudante.nome }) %>